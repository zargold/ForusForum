<%include ./partials/header%>
 

 <% if(nothing.first==="Nothing left"){%>
      <div> <p>nothing left went to top!</p></div>
    <%}%>
    <% if( typeof posts!==undefined){%>
    <ol>
      <% posts.forEach(function(key){ %>
          <li> <div><a href="/cat/<%=key.catID%>/post/<%=key.id%>"><%-key.Ptitle%> <strong style="font-size:0.65em">(updated: <%-key.updated_at%>)</strong></a>
         <span style="font-size: 0.75em; margin: 5px 0px 0px 0px;"><a href="/post/<%=key.id%>/edit">Edit this</a>
         <form method="POST" action="/post/<%=key.id%>?_method=DELETE">
          <input type="submit" name= "delete" value="Delete this Post"></div></span>
          </form></li>
      <%});%>
    <a href="/posts/<%=what.thing%>/"> >View Next Page</a>
      <%}else{%>
        No more posts. <a href="/"> >Back Home</a>
    </ol>
      <%}%>
         <h4>Comments</h4>
    <%if (comments.length<1){%>
      <div class="comFull">
      <p> Be the first to Comment!</p>
      </div>
    <%}else{%>
    <div class="comFull">
    <% comments.forEach(function(key){ %>
      <div class="singleCom">
      <div class="comInfo">
      <strong><%-key.titleM%></strong>
      <span class="created_at">Created:<%- key.created_atM %></span>&nbsp;&nbsp;
      <span class="vote" id="comment">  
      <label>Comment: </label>
        <input type="submit" name="comment,<%=key.created_atM%>,up" value="&#8657;">
        &nbsp;<%- key.Mvote%>&nbsp;
        <input type="submit" name="comment,<%=key.created_atM%>,down" value="&#8659;">
        </span>
      </div>
      <div class="author">
        <span class="author"><a href="/user/<%=key.userID%>"><%-key.userN%></a>:</span>
        <span class="created_at"> Since: <%-key.created_atU%></span> 
        <span class="avatar">  (<%-key.avatar%>)</span>
        <span class="vote"> Rep: <%-key.Uvote%></span>
      </div>
        <p><%- key.bodyM %></p>
      </div>
    <%});%>
    </form></>
    <%}%>

<%include ./partials/footer%>